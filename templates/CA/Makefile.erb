# your CA cert.

requests = *<%= scope.lookupvar('openssl::params::csr_filename_suffix') %>

sign: ${requests}

# remove -batch option if want chance to not certify a particular request
${requests}: FORCE
	@openssl ca -batch -config openssl.cnf -in $@ -out ${@:<%= scope.lookupvar('openssl::params::csr_filename_suffix') %>=<%= scope.lookupvar('openssl::params::cert_filename_suffix') %>}
	@[ -f ${@:<%= scope.lookupvar('openssl::params::csr_filename_suffix') %>=<%= scope.lookupvar('openssl::params::cert_filename_suffix') %>} ] && rm $@

createsa:
	@test $${csr:?"usage: make createsa csr=csrfile"}
	@openssl ca -config openssl.cnf -revoke $(cert)
	@$(MAKE) gencrl


revoke:
	@test $${cert:?"usage: make revoke cert=certificate"}
	@openssl ca -config openssl.cnf -revoke $(cert)
	@$(MAKE) gencrl

gencrl:
	@openssl ca -config openssl.cnf -gencrl -out ca-crl.pem

s_server:
	@openssl s_server -verify 10 -cert ../certs/$(shell hostname -f)_cert.pem -key ../certs/$(shell hostname -f)_key.pem -CAfile ./ca-cert.pem

s_client:
	@openssl s_client -connect $(shell hostname -f):4433  -verify 10 -cert ../certs/$(shell hostname -f)_cert.pem -key ../certs/$(shell hostname -f)_key.pem -CAfile ./ca-cert.pem

clean:
	-rm ${requests}

print:
	@test $${cert:?"usage: make print cert=certificate"}
	@openssl x509 -in $(cert) -text -noout

cacertprint:
	@openssl x509 -in ca-cert.pem -text -noout


# creates required supporting files, CA key and certificate
init:
	@test ! -f serial
	@mkdir crl newcerts private
	@chmod go-rwx private
	@echo '01' > serial
	@touch index
	# NOTE use "-newkey rsa" if running OpenSSL less than 0.9.8a
	@openssl req -nodes -config openssl.cnf -days 1825 -x509 -newkey rsa:2048 -out ca-cert.pem -outform PEM

help:
	@echo make sign
	@echo '  - signs all *.csr files in this directory'
	@echo
	@echo make revoke cert=filename
	@echo '  - revokes certificate in named file and calls gencrl'
	@echo
	@echo make gencrl
	@echo '  - updates Certificate Revocation List (CRL)'
	@echo
	@echo make clean
	@echo '  - removes all *.csr files in this directory'
	@echo
	@echo make print
	@echo '  - print the CA certificate'
	@echo
	@echo make init
	@echo '  - required initial setup command for new CA'

